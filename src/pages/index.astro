<script>
	const wordSlider = document.querySelector(".cli-word-slider");
	const options = wordSlider.querySelectorAll("span");
	let currentIndex = 0;

	setInterval(() => {
		options[currentIndex].style.display = "none";
		currentIndex = (currentIndex + 1) % options.length;
		options[currentIndex].style.display = "inline-block";
	}, 4000); // Change every 2.5 seconds (adjust as needed)
</script>

<script>
	document.getElementById("toggle-contact").addEventListener("click", function (event) {
		event.preventDefault(); // Prevent the link from navigating

		var newsletterDiv = document.getElementById("newsletter");
		newsletterDiv.classList.add("hidden");
		var contactDiv = document.getElementById("contact");
		contactDiv.classList.toggle("hidden");
	});

	document.getElementById("toggle-newsletter").addEventListener("click", function (event) {
		event.preventDefault(); // Prevent the link from navigating

		var newsletterDiv = document.getElementById("newsletter");
		newsletterDiv.classList.toggle("hidden");
		var contactDiv = document.getElementById("contact");
		contactDiv.classList.add("hidden");
	})<script>;
	window.onbeforeunload = () => {
		for (const form of document.getElementsByClassName("contact-cli")) {
			form.reset();
		}
	};
</script>
